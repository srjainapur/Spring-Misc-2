<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="instrument" class="com.java.autowire.constructor.xml.Instrument" autowire-candidate="true">
   	<property name="name" value="Guitar"/>
   </bean>
   
   <bean id="performer" class="com.java.autowire.constructor.xml.Performer" autowire="constructor"/>
   
</beans>