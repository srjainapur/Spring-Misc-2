<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <!-- Definition for textEditor bean -->
   <bean id="textEditor" class="com.java.constructor.annot.TextEditor" autowire="constructor">
   	<constructor-arg value="Generic text editor"></constructor-arg>
   </bean>
   
   <!-- Definition for spellChecker bean -->
   <bean id = "SpellChecker" class = "com.java.constructor.annot.SpellChecker"></bean>
</beans>