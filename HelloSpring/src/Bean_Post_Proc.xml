<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="helloWorld" class="com.java.bean.post.process.HelloWorld" init-method="initMethod" destroy-method="destroyMethod">
   	<property name="message" value="Message setting in config xml"/>
   </bean>
   
   <bean class="com.java.bean.post.process.InitHelloWorld"/>
   
</beans>