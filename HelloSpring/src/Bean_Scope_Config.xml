<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="helloBean" class="com.java.bean.scope.HelloWorld" scope="singleton">
   	<property name="message" value="Singleton Bean Scope Demo"/>
   </bean>
   
   <bean id="protoBean" class="com.java.bean.scope.HelloWorld" scope="prototype">
   	<property name="message" value="Prototype Bean Scope Demo"/>
   </bean>
</beans>